<UserControl x:Class="TechnoAudio.TimelineMark"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TechnoAudio"
             mc:Ignorable="d">
    <DockPanel>
        <Border Background="#FFF9F9F9" BorderBrush="#FF404040" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="2" DockPanel.Dock="Top">
            <TextBlock x:Name="text" FontFamily="Consolas" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Top">00:00</TextBlock>
        </Border>
        <Rectangle DockPanel.Dock="Bottom" Height="6" Width="1" Fill="#FF404040" HorizontalAlignment="Left" />
    </DockPanel>
</UserControl>
